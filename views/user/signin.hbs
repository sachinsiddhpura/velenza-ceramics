<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Login</h1>
        {{# if error }}
         <div class="alert alert-danger">{{ error }}</div>
         {{/if}}
        {{# if hasErrors }}
            {{# each messages }}
                <div class="alert alert-danger"> <p>{{this}}</p></div>
            {{/each}}
        {{/if}}
        <form action="/user/signin" method="POST">
             <div class="form-group">
                <label for="email">E-mail</label>
                <input type="text" id="email" name="email" class="form-control" placeholder="fullname@gmail.com" required>
            </div>
             <div class="form-group">
                <label for="password">Password</label>
                <input type="text" id="password" name="password" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf" value="{{ token }}">
            <button class="btn btn-primary" type="submit">Login</button>
        </form>
        <br>
        <div><p>Don't have an account <a href="/user/signup">click here</a> </p></div>
    </div>
</div>
