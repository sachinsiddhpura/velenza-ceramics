<div class="container">
    <h2>Manage Custom Products</h2>
    <br>
    {{# if empty }}
         <div class="alert alert-warning"> <p>{{empty}}</p></div>
    {{/if}}
    {{# each products }}
        <div class="card w-75">
            <div class="card-body">
                <div class="media">
                    <img class="mr-3" src="{{ this.imagePath }}" alt="Generic placeholder image">
                </div>
                <h5 class="card-title">{{ this.name }}</h5>
                <h4 class="card-title">{{ this.number }}</h4>
                <p class="card-text">{{ this.description }}</p>
                
                <div>
                    <div class="float-right"><strong>{{ this.price }}â‚¹</strong></div>
                </div>
                <a href="/admin/delete/custom/{{ this._id }}" class="btn btn-danger">Remove</a>
            </div>
         </div>
         <br>
    {{/each}}

</div>

